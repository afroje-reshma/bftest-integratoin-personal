tprefix = 'https://github.com/venicegeo/'

folder("venice/beachfront") {
  displayName("beachfront")
}

def bfprojects = ['bftest-integration']

for(i in bfprojects) {
  pipelineJob("venice/beachfront/${i}-pipeline") {
    description("Beachfront pipeline")
    triggers {
      cron('* * * * *') 
    }
    definition {
      cpsScm {
        scm {
          git {
            remote {
              url("${gitprefix}${i}")
              branch("*/master")
            }
          }
       }
     }
   }
  }
}
